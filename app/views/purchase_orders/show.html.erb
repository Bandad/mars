<h1 id='purchase-order-show-page'>Purchase Order for <%= @purchase_order.supplier.name %></h1>
<% @title = "MARS - show #{@purchase_order.name}" %>
<h3><%= @purchase_order.code %> 
<% if @purchase_order.open? %>
	<%= link_to 'Edit', edit_purchase_order_path(@purchase_order), class: 'pull-right btn btn-primary' %>
<% elsif @purchase_order.issued? %>
	<%= link_to 'Email purchase_order', new_email_path(type: 'purchaseOrder', id: @purchase_order.id),
		class: 'pull-right btn btn-primary' %>
<% end %></h3>

<table class='table table-condensed' id="sq-header-table">
  <tr>
    <td>Title</td>
    <th><%= @purchase_order.name %></th>
	<td>Total</td>
	<th class="text-right"><%= number_to_currency(@purchase_order.update_total) %></th>
  </tr>
  <tr>
    <td>Description</td>
    <td><%= simple_format(@purchase_order.description) %></td>
	<td>Project</td>
	<td><%= simple_format("#{@purchase_order.project.code} - #{@purchase_order.project.name}") %></td>
  </tr>
  <tr>
    <td>Customer</td>
    <td><%= @purchase_order.customer.name %><br />
		<% if @purchase_order.customer.addresses %>
		<%= simple_format("#{@purchase_order.customer.addresses.first.body}\n#{@purchase_order.customer.addresses.first.post_code}") %>
		<% end %>
	</td>
	<td>Supplier</td>
	<td><%= @purchase_order.supplier.name %><br />
	<% if @purchase_order.address %>
	<%= simple_format("#{@purchase_order.address.body}\n#{@purchase_order.address.post_code}") %>
	<% end %>
	</td>
  </tr>
  <tr>
    <td>Delivery</td>
    <td><%= @purchase_order.client.name %><br />
	<% if @purchase_order.delivery_address %>
	<%= simple_format("#{@purchase_order.delivery_address.body}\n#{@purchase_order.delivery_address.post_code}") %>
	<% end %></td>
	<td>Contact</td>
	<td><% if @purchase_order.contact %>
		<%= @purchase_order.contact.name %><br />
		<%=	@purchase_order.contact.telephone %><br />
		<%= mail_to(@purchase_order.contact.email, nil, encode: :javascript) %>
		<% end %>
	</td>
  </tr>
  <tr>
    <td>Notes</td>
    <td><%= simple_format(@purchase_order.notes) %></td>
	<td>Status</td>
	<td><%= @purchase_order.status %></td>
  </tr>
</table>
<h3>Detail</h3>

<table class='table table-condensed' id='sq-detail-table'>
	<tr>
		<th>Item</th>
		<th>Specification</th>
		<th class="text-right">Quantity</th>
		<th class="text-right">Unit Price</th>
		<th class="text-right">Total</th>
		<th></th>
	</tr>
	<% @purchase_order.purchase_order_lines.each do |line| %>
		<tr>
			<td width="120"><%= line.name %></td>
			<td width="350"><%= line.description %></td>
			<td class="text-right"><%= line.quantity %></td>
			<td class="text-right"><%= number_to_currency(line.unit_price) %></td>
			<td class="text-right"><%= number_to_currency(line.total) %></td>
			<td class="text-right">
			<% if @purchase_order.open? %>
			<% if allow? :purchase_order_lines, :edit %>
				<%= link_to 'Edit', edit_purchase_order_line_path(line) %> |
 				<%= link_to 'Remove', purchase_order_line_path(line), method: :delete, data: { confirm: 'Are you sure?' } %>
			<% end %>
			<% end %>
			</td>
		</tr>
	<% end %>
</table>
<% if @purchase_order.open? %>
	<div class="form-actions">
		Add line:
		<%= form_for @purchase_order, class: 'form-inline' do |f| %>
			<%= f.fields_for :purchase_order_lines, @purchase_order.purchase_order_lines.new do |builder| %>
				<%= render 'shared/lines', f: builder %>
			<% end %>
		<% end %>
	</div>
		<%= link_to "Issue purchase Order", issue_purchase_order_path(@purchase_order), method: :put, 
		data: { confirm: 'Are you sure? This will prevent further changes' }, class: "btn btn-warning" %>
		<%= link_to "Cancel", cancel_purchase_order_path(@purchase_order), method: :put, 
		data: {confirm: 'WARNING - this will close the order for good, you might want to add a comment first'}, class: "btn btn-danger" %>
		<br />
<% end %>
<% if @purchase_order.issued? %>
		<%= link_to "Receipt", accept_purchase_order_path(@purchase_order), method: :put, 
		data: {confirm: 'The supplier has delivered the order?'}, class: "btn btn-success" %>
		<%= link_to 'Re-open', reopen_purchase_order_path(@purchase_order), method: :put,  
		data: { confirm: 'You to change the order?'}, class: 'btn btn-warning' %> 
		<%= link_to "Cancel", cancel_purchase_order_path(@purchase_order), method: :put, 
		data: {confirm: 'WARNING - this will close the order for good'}, class: "btn btn-danger" %>
		<br />
<% end %>
<% if @purchase_order.delivered? %>
		<%= link_to "Paid", paid_purchase_order_path(@purchase_order), method: :put, 
		data: {confirm: 'The supplier has been paid?'}, class: "btn btn-success" %>
		<br />
<% end %>
<%= link_to 'Supplier', company_path(@purchase_order.supplier_id) %> |
<%= link_to 'Client', company_path(@purchase_order.client_id) %> |
<%= link_to 'Project', project_path(@purchase_order.project_id) %> | 
<%= link_to "Printable purchase Order (PDF)", purchase_order_path(@purchase_order, format: "pdf") %> |
<%= link_to 'Email history', purchase_order_emails_path(@purchase_order) %> |
<%= link_to 'Event history', purchase_order_events_path(@purchase_order) %>
