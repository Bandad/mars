<%= simple_form_for(@contact) do |f| %>
  <%= f.error_notification %>

	<div class="row">
		<div class="span6">
			<div class="form-inputs">
			<%= f.input :name %>
			<%= f.input :job_title %>
		    <%= f.association :company %>
			<%= f.association :address %>
			<%= f.input :telephone %>
			<%= f.input :mobile %>
			</div>
		</div>
	<div class="row">
		<div class="span6">
			<div class="form-inputs">
			<%= f.input :fax %>
			<%= f.input :email %>
			<%= f.input :notes, input_html: {rows: 6, cols: 60} %>
			</div>
		</div>
	</div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>