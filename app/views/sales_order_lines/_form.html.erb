<%= simple_form_for @sales_order_line, :html => { :class => 'form-horizontal'} do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
	<%= f.hidden_field :sales_order_id, value: @sales_order_line.sales_order_id %>
    <%= f.input :category %>
    <%= f.input :name %>
    <%= f.input :description, input_html: {rows: 4, class: 'span8'} %>
    <%= f.input :quantity %>
    <%= f.input :unit_price %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>