<h1 id='quotation-show-page'>Sales Quotation for <%= @quotation.customer.name %></h1>
<% @title = "MARS - show #{@quotation.name}" %>
<h3><%= @quotation.code %> 
<% if @quotation.open? %>
	<%= link_to 'Edit', edit_quotation_path(@quotation), class: 'pull-right btn btn-primary' %>
<% elsif @quotation.issued? %>
	<%= link_to 'Re-open', reopen_quotation_path(@quotation), method: :put, 
		class: 'pull-right btn btn-warning',data: { confirm: 'Are you sure?'} %> 
	<%= link_to 'Email quotation', new_email_path(type: 'Quotation', id: @quotation.id),
		class: 'pull-right btn btn-primary' %>
<% end %></h3>

<table class='table table-condensed' id="sq-header-table">
  <tr>
    <td>Title</td>
    <th><%= @quotation.name %></th>
	<td>Total</td>
	<th class="text-right"><%= number_to_currency(@quotation.update_total) %></th>
  </tr>
  <tr>
    <td>Description</td>
    <td><%= simple_format(@quotation.description) %></td>
	<td>Project</td>
	<td><%= simple_format("#{@quotation.project.code} - #{@quotation.project.name}") %></td>
  </tr>
  <tr>
    <td>Customer</td>
    <td><%= @quotation.customer.name %><br />
		<% if @quotation.address %>
		<%= simple_format("#{@quotation.address.body}\n#{@quotation.address.post_code}") %>
		<% end %>
	</td>
	<td>Supplier</td>
	<td><%= @quotation.supplier.name %><br />
	<% if @quotation.supplier.addresses.first %>
	<%= simple_format("#{@quotation.supplier.addresses.first.body}\n#{@quotation.supplier.addresses.first.post_code}") %>
	<% end %>
	</td>
  </tr>
  <tr>
    <td>Delivery</td>
    <td><%= @quotation.customer.name %><br />
	<% if @quotation.delivery_address %>
	<%= simple_format("#{@quotation.delivery_address.body}\n#{@quotation.delivery_address.post_code}") %>
	<% end %></td>
	<td>Contact</td>
	<td><% if @quotation.contact %>
		<%= @quotation.contact.name %><br />
		<%=	@quotation.contact.telephone %><br />
		<%= mail_to(@quotation.contact.email, nil, encode: :javascript) %>
		<% end %>
	</td>
  </tr>
  <tr>
    <td>Notes</td>
    <td><%= simple_format(@quotation.notes) %></td>
	<td>Status</td>
	<td><%= @quotation.current_state %></td>
  </tr>
</table>
<h3>Detail</h3>

<table class='table table-condensed' id='sq-detail-table'>
	<tr>
		<th>Item</th>
		<th>Specification</th>
		<th class="text-right">Quantity</th>
		<th class="text-right">Unit Price</th>
		<th class="text-right">Total</th>
		<th></th>
	</tr>
	<% @quotation.quotation_lines.each do |line| %>
		<tr>
			<td width="120"><%= line.name %></td>
			<td width="350"><%= line.description %></td>
			<td class="text-right"><%= line.quantity %></td>
			<td class="text-right"><%= number_to_currency(line.unit_price) %></td>
			<td class="text-right"><%= number_to_currency(line.total) %></td>
			<td class="text-right">
			<% if @quotation.open? %>
			<% if allow? :quotation_lines, :edit %>
				<%= link_to 'Edit', edit_quotation_line_path(line) %> |
				<%= link_to 'Remove', quotation_line_path(line), method: :delete, data: { confirm: 'Are you sure?' } %>
			<% end %>
			<% end %>
			</td>
		</tr>
	<% end %>
</table>
<% if @quotation.issued? && (allow? :sales_orders, :create) %>
	<%= link_to 'Make Order', convert_quotation_path(@quotation), method: :post,
				class: 'pull-right btn btn-primary',data: { confirm: 'Are you sure?'} %>
<% end %>
<% if @quotation.open? %>
	<div class="form-actions">
		Add line:
		<%= form_for @quotation, class: 'form-inline' do |f| %>
			<%= f.fields_for :quotation_lines, @quotation.quotation_lines.new do |builder| %>
			<%= render 'shared/lines', f: builder %>
			<% end %>
		<% end %>
		<div class='row'>
			<div class='span3'>
				or select CSV file to upload:
			</div>
			<div class='span6'>
				<%= form_tag import_quotations_path, multipart: true do %>
				<%= file_field_tag :file %>
				<%= hidden_field_tag :id, @quotation.id %>
				<%= submit_tag "Import",class: "btn btn-primary" %>
				<% end%>
			</div>
		</div>
	</div>
					<%= link_to "Issue Quotation", issue_quotation_path(@quotation), method: :put, #id: @quotation.id, 
					data: { confirm: 'The quotation is ready to send to customer?' }, class: "btn btn-warning" %>
					<% if @quotation.open? %>
						<%= link_to "Cancel Quotation", cancel_quotation_path(@quotation), method: :put, 
						data: { confirm: 'Are you sure? This cannot be undone.' }, class: "btn btn-danger" %>
					<% end %>
					<br />
<% end %>
<%= link_to 'Customer', company_path(@quotation.customer_id) %> |
<%= link_to 'Project', project_path(@quotation.project_id) %> | 
<%= link_to "Printable Quote (PDF)", quotation_path(@quotation, format: "pdf") %> |
<%= link_to 'Email history', quotation_emails_path(@quotation) %> |
<%= link_to 'Event history', quotation_events_path(@quotation) %> |
<%= link_to 'Export to file(CSV)', quotation_path(@quotation, format: "csv") %>