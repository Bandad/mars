<h1>Quotations</h1>

<table class='table table-condensed'>
  <tr>
    <th>Code</th>
	<th>Name</th>
    <th>Project</th>
    <th>Customer</th>
    <th>Supplier</th>
    <th>Issue date</th>
    <th>Total</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @quotations.each do |quotation| %>
  <tr>
    <td><%= link_to quotation.code, quotation %></td>
	<td><%= quotation.name %></td>
    <td><%= quotation.project.code %></td>
    <td><%= quotation.customer.name %></td>
    <td><%= quotation.supplier.name %></td>
    <td><%= quotation.issue_date %></td>
    <td><%= quotation.total %></td>
    <td><%= quotation.current_state %></td>
    <td><%= link_to 'Show', quotation %></td>
  </tr>
<% end %>
</table>

