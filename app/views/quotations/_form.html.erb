<%= simple_form_for(@quotation, :html => { :class => 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
	<div class="row">
		<div class="span6">
		<%= f.association :supplier %>
	    <%= f.hidden_field :customer_id %>
	    <%= f.association :project, collection: @customer.projects %>
		<%= f.hidden_field :code, value: @quotation.code %>
	    <%= f.input :name, label: 'Title' %>
		<%= f.association :contact, collection: @customer.contacts %>
		</div>
		<div class="span6">
	    <%= f.association :address, collection: @customer.addresses, label: 'Contact address' %>
		<%= f.association :delivery_address, collection: @customer.addresses %>
	    <%= f.input :issue_date, as: :string, input_html: {class: 'date_picker'} %>
	    <%= f.input :status %>
		</div>
	<div class="row">
		<div class="span12">
		<%= f.input :description, placeholder: 'visible to customer', input_html: {rows: 4, class: 'span9'} %>
	    <%= f.input :notes, input_html: {rows: 6, class: 'span9'} %>
		</div>
	</div>
  </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
