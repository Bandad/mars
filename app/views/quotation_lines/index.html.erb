<% @quotation_lines.each do |quotation_line| %>
  <tr>
    <td><%= quotation_line.name %></td>
    <td><%= quotation_line.description %></td>
    <td><%= quotation_line.quantity %></td>
    <td><%= quotation_line.unit_price %></td>
    <td><%= quotation_line.total %></td>
    <td><%= link_to 'Show', quotation_line %></td>
    <td><%= link_to 'Edit', edit_quotation_line_path(quotation_line) %></td>
    <td><%= link_to 'Destroy', quotation_line, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

