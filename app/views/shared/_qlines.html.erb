<fieldset id="new-line-form">
  <%= f.text_field :category, placeholder: 'category', class: 'span2', autofocus: 'autofocus' %>
  <%= f.text_field :name, placeholder: 'item' ,class: 'span2'%>
  <%= f.text_area :description, placeholder: 'specification',class: 'span4',rows: 1 %>
  <%= f.text_field :quantity, placeholder: 'quantity',class: 'span1' %>
  <%= f.text_field :unit_price, placeholder: 'unit price',class: 'span2' %>
  <%= f.submit 'Add', class: 'btn btn-primary pull-right' %>
</fieldset>