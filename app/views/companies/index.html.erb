<h1 id="companies-index-page">Companies</h1>
<% if allow? :companies, :new %>
	<%= link_to 'New Company', new_company_path, class: "pull-right" %>
<% end %>

<%= form_tag companies_path, method: 'get', class: "navbar-search pull-left", remote: true, id: "companies_search" do %>
	<%= text_field_tag :search, params[:search], class: "search-query", placeholder: 'Search', autofocus: "autofocus" %>
	<%= submit_tag "Search", name: nil, class: "hidden" %>
<% end %>

<br><br>
<div id="companies"><%= render 'companies' %></div>

<% if allow? :companies, :new %>
	<%= link_to 'New Company', new_company_path %>
